#!/bin/sh
#
# Pre-commit hook to run go fmt on all Go files
#

# Find all staged Go files
GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$GO_FILES" ]; then
    # No Go files staged, nothing to do
    exit 0
fi

echo "Running go fmt on staged Go files..."

# Run go fmt on each file
for file in $GO_FILES; do
    if [ -f "$file" ]; then
        go fmt "$file"
        # Stage the formatted file
        git add "$file"
    fi
done

echo "âœ“ go fmt completed"
exit 0